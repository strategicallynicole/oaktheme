{{!< default}} 
<!-- Single Post Wrapper -->
<div class="single-blog-sec">
    <div class="author-banner banner-overlay member-banner" style="background-image:url(https://images.unsplash.com/photo-1558979158-65a1eaa08691?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80)">
        <div class="container">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <h2>Choose your subscription</h2>
                    <p>Unlock full access to {{@site.title}} and see the entire library of members-only content & updates</p>
                </div>
            </div>
        </div>
    </div>
    <div class="Membership-plan-wrap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="membership-plan">
                        <div class="full-membership-content">
                            {{#if @member.paid}}
                            {{!-- Paid member: Show the following information of the subscriber --}}
                            <script>window.location = '{{@site.url}}/account/';</script>
                            {{else}}
                            {{!-- Already member in: Show pricing table --}}
                            <div class="membership-pricing-tables">
                                <div class="row justify-content-center">
                                    {{^if @member}}
                                    <!--  single pricing box  -->
                                    <div class="col-lg-4 col-md-6">
                                        <div class="single-pricing-box">
                                            <div class="pricing-icon">
                                                <img src="{{asset "/img/free.png"}}" alt="pricing icons">
                                            </div>
                                            <h3>Free</h3>
                                            <h3 class="pricing-count">$0/<span>mo</span></h3>
                                            <div class="pricing-list">
                                                <ul>
                                                    <li>Access to all free posts</li>
                                                    <li>Weekly updates with new content</li>
                                                    <li>No card details required</li>
                                                    <li class="inactive">Support independent publishing</li>
                                                    <li class="inactive">Customer Support 24/7</li>
                                                </ul>
                                            </div>
                                            <a href="{{@site.url}}/signup/" class="btn btn-pricing mt-10">Subscribe</a>
                                        </div>          
                                    </div>
                                    <!--  // single pricing box  -->
                                    {{/if}}
                                    <!--  single pricing box  -->
                                    <div class="col-lg-4 col-md-6">
                                        <div class="single-pricing-box">
                                            <div class="pricing-icon">
                                                <img src="{{asset "/img/monthly.png"}}" alt="pricing icons">
                                            </div>
                                            <h3>Monthy</h3>
                                            <h3 class="pricing-count">${{@price.monthly}}/<span>per month</span></h3>
                                            <div class="pricing-list">
                                                <ul>
                                                    <li>Access to all free private posts</li>
                                                    <li>Weekly updates with new content</li>
                                                    <li>Support independent publishing</li>
                                                    <li>No card details required</li>
                                                    <li>Customer Support 24/7</li>
                                                </ul>
                                            </div>
                                            <a href="javascript:void(0)" class="btn btn-pricing mt-10" data-members-plan="Monthly">Choose now</a>
                                        </div>          
                                    </div>
                                    <!--  // single pricing box  -->
                                    <!--  single pricing box  -->
                                    <div class="col-lg-4 col-md-6">
                                        <div class="single-pricing-box">
                                            <div class="pricing-icon">
                                                <img src="{{asset "/img/yearly.png"}}" alt="pricing icons">
                                            </div>
                                            <h3>Yearly</h3>
                                            <h3 class="pricing-count">${{@price.yearly}}/<span>per year</span></h3>
                                            <div class="pricing-list">
                                                <ul>
                                                    <li>Access to all free private posts</li>
                                                    <li>Weekly updates with new content</li>
                                                    <li>Support independent publishing</li>
                                                    <li>No card details required</li>
                                                    <li>Customer Support 24/7</li>
                                                </ul>
                                            </div>
                                            <a class="btn btn-pricing mt-10" href="javascript:void(0)" data-members-plan="Yearly">Choose now</a>
                                        </div>          
                                    </div>
                                    <!--  // single pricing box  -->
                                </div>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Single post Wrapper -->