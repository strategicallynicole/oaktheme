{{!< default}}
{{#post}}
<!-- Single Post Wrapper -->
<div class="single-blog-sec">
    <div class="author-banner {{#if feature_image}}banner-overlay{{else}}banner-split{{/if}}" {{#if feature_image}}style="background-image:url({{feature_image}})"{{/if}}>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <h1 class="posttitle">{{title}}</h1>
                    <div class="post-meta d-flex flex-wrap justify-content-between align-items-end mt-5">
                        <div>
                            <p>
                                {{tags separator=", " limit="2"}}
                            </p>
                            <p><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM, YYYY"}}</time></p>
                        </div>
                        <div class="">
                            <p>{{reading_time}}</p>
                        </div>
                    </div>
                    <div class="author-meta">
                        <i class="fa fa-user-o"></i> Posted by - {{authors separator=", "}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="single-blog">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="sb-content-wrap blog-single-2">
                        <div class="">
                            <div class="single-post-content">
                                {{#if access}}
                                {{!-- if the user has access to this post, show it to them --}}
                                <div class="full-post-contents">
                                    {{content}}
                                </div>
                                {{else}}
                                {{!-- if the user does not have access, show them an upgrade CTA --}}
                                <div class="post-excerpt">
                                    <p>{{custom_excerpt}}</p>
                                </div>
                                <section class="paid-post-subscribe">
                                    {{#if @member}}
                                    <h4>This post is for paying subscribers only</h4>
                                    {{else}}
                                    <h4>This post is for subscribers only</h4>
                                    {{/if}}
                                    <p>You don't have access to this post on <strong>{{@site.title}}</strong> at the moment, but if you upgrade your account you'll be able to see the whole thing, as well as all the other posts in the archive! Subscribing only takes a few seconds and will give you immediate access.</p>
                                    <div class="post-upgrade-cta-content">
                                        <a class="btn btn-danger rounded" href="/subscribe/">Subscribe now</a>
                                        <p>Already have an account? <a href="/signin/">Sign in</a></p>
                                    </div>
                                </section>
                                {{/if}}
                            </div>
                        </div>
                        <!-- single blog footer -->
                        <div class="sb-footer">
                            <div class="sb-author-sec d-flex align-items-center justify-content-between flex-wrap">
                                <div class="sb-share d-flex flex-wrap align-items-center">
                                    <p>Share the post on:</p>
                                    <ul class="social-icon">
                                        {{> "share-post"}}
                                    </ul>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap mt-4 pt-4 border-top">
                                <p class="mr-2 mb-0">Tags</p>
                                <ul class="sb-tag-list">
                                    {{#foreach tags}}
                                    <li><a class="neumorphic" href="{{url}}">{{name}}</a></li>
                                    {{/foreach}}
                                </ul>
                            </div>
                            {{> "author-meta"}}
                            {{> "related-posts"}}
                            <div class="bs-comment-sec mt-5">
                                <h4 class="text-center mb-4">{{t "Leave a Comment"}}</h4>
                                <div id="disqus_thread"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Single post Wrapper -->
{{/post}}

{{!-- suscribe --}}
{{> "subscribe-section"}}