
       
 <section id="blog" class="wrapper style2 posts">
                        <div class="inner">
{{#get "posts" limit="3" filter="id:-{{post.id}}" as |recents|}}

                        {{#foreach posts}}
                        <div class="col-md-4">
                        <article class="feeditem">
                            
                            {{#if feature_image}}
                            <a href="{{url}}" class="fit image"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
                            {{/if}}
                            <header>
                                <span class="date">{{date format="MMM D, YYYY"}}</span>
                                <h2><a href="{{url}}">{{title}}</a></h2>
                            </header>
                            <p class="summary">{{excerpt words="15"}}</p>
                           
                        </article>
                        </div>
                        {{/foreach}}
                        {{> pagination}}

                                                {{/get}}

</div>
                    </section>         
