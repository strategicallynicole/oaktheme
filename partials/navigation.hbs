<div class="main-menu">
    <div class="menubar">
        <span class="menubars">
            <span></span>
        </span>
    </div>
    <div class="mainmenu-list">
        <ul>
            {{#foreach navigation}}
            <li class="{{#if current}}active{{/if}}">
                <a href="{{url absolute=" true "}}">{{label}}</a>
            </li>
            {{/foreach}}
            {{#if @member}}
            <li><a href="/account/">Account</a></li>
            <li><a class="btn btn-danger btn-sm rounded" href="#signout" data-members-signout>Sign out</a></li>
            {{else}}
            <li><a href="/signin/">Sign in</a></li>
            <li><a class="btn btn-danger btn-sm rounded" href="/subscribe/">Subscribe</a></li>
            {{/if}}
        </ul>
        <div class="close-menu d-block d-xl-none">
            <img src="data:image/png;base64,"
                alt="close">
        </div>
    </div>
</div>