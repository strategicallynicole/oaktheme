{{#get 'authors' limit='5' include='count.posts'}}
<!-- ================== Top Author Area ======================= -->
<div class="latest-post-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title">
                    <h4>TOP POST FROM BEST AUTHORS</h4>
                </div>
            </div>
        </div>
        <div>
            <div class="ta-carousel owl-carousel">
                {{#foreach authors}}
                <!-- Single Author -->
                <div class="single-top-author" data-aos="fade-up">
                    <h4><a href="{{url}}">{{name}}</a></h4>
                    {{#if profile_image}}
                    <div class="t-author-image">
                        <img src="{{profile_image}}" alt="{{name}}">
                    </div>
                    {{/if}}
                </div>
                {{/foreach}}
            </div>
        </div>
    </div>
</div>
<!-- ================== /Top Author Area ======================= -->
{{/get}}