{{#primary_author}}
<div class="post-author-details">
    {{#if profile_image}}
    <div class="author-image">
        <a href="{{url}}">
            <img src="{{profile_image}}" alt="{{name}}">
        </a>
    </div>
    {{/if}}
    <div class="post-author-content">
        <h5><a href="{{url}}">{{name}}</a></h5>
        {{#if location}}<p>{{location}}</p>{{/if}}
        <ul>
            {{#if facebook}}
            <li><a href="{{facebook_url}}" target="_blank"><i class="fa fa-facebook"></i></a></li>
            {{/if}}
            {{#if twitter}}
            <li><a href="{{twitter_url}}" target="_blank"><i class="fa fa-twitter"></i></a></li>
            {{/if}}
            {{#if website}}
            <li><a href="{{website}}" target="_blank"><i class="fa fa-globe"></i></a></li>
            {{/if}}
        </ul>
        {{#if bio}}
        <p>{{bio}}</p>
        {{/if}}
    </div>
</div>
{{/primary_author}}