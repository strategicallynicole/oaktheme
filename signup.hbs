{{!< default}} 
<!-- Single Post Wrapper -->
<div class="single-blog-sec">
    <div class="author-banner member-banner" style="background-image:url(https://images.unsplash.com/photo-1521729839347-131a32f9abcb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1632&q=80)"></div>
    <div class="single-blog">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="sb-content-wrap blog-single-2 login-content">
                        <div class="">
                            <div class="single-post-content">
                                {{#if @member.paid}}
                                {{!-- Logged in: Redirect home --}}
                                <script>window.location = '{{@site.url}}';</script>
                                {{else if @member}}
                                {{!-- Already member in: Redirect Account --}}
                                <script>window.location = '{{@site.url}}/subscribe/';</script>
                                {{else}}
                                <form class="signup-form" data-members-form="signup">
                                    <h3 class="signup-title">Signup to {{@site.title}}</h3>
                                    <p>Get access to all the free and premium contents</p>
                                    <div class="authbox-login">
                                        <input data-members-email type="email" placeholder="Type your email..." required="true" autocomplete="false" />
                                        <button class="btn btn-danger" type="submit">
                                            <span class="button-content">Sign up</span>
                                            <span class="button-loader"><i class="fa fa-circle-o-notch fa-spin"></i></span>
                                        </button>
                                    </div>
                                    <p class="authbox-extra mt-2">Already have an account? <a href="{{@site.url}}/signin/">Sign in</a></p>
                                    <div class="message-success"><strong>Great!</strong> Check your inbox and click the link to confirm your subscription</div>
                                    <div class="message-error">Please enter a valid email address!</div>
                                </form>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Single post Wrapper -->