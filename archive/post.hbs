<div class="container-fluid post-section">
    <div class="row">
        <div class="col">
            <div class="post-header">
                <div class="text-holder">
                    <div class="post-info-holder">
                        <div class="link-holder">
                            <a href="{{@site.url}}/blog">&#x3C; Back</a>
                        </div>
                        <div class="post-info">
                            <div class="date">{{date}}</div>
<!--                            <div class="auther">by Julia Marcus</div>
    -->                        {{#if primary_tag}}
                                {{#primary_tag}}
                                    <li>
                                        <div class="tag box-inline">
                                            <span class="icon icon-md icon-primary fas fa-tag"></span>
                                            <span><a href="{{url}}">{{name}}</a></span>
                                        </div>
                                    </li>
                                {{/primary_tag}}
                            {{/if}}
                        </div>
                    </div>
                     <div class="title">{{title}}</div>
                     <div class="text">{{excerpt}}</div>
                </div>
            <div class="post-content">
                {{content}}
            </div>
        </div>
    </div>
</div>

<!--related posts -->



{{#if primary_tag}}
    <div class="row">
        <div class="col-xs-12 col-sm-4">
        {{#get "posts" filter="tags:{{primary_tag.slug}}+id:-{{id}}" limit="3" as |related_posts|}}
            {{#if related_posts}}
                {{#../primary_tag}}
                    <p class="h1">More in &nbsp; &nbsp;<a href="{{url}}"><span class="icon icon-md icon-primary fas fa-tag"></span>&nbsp;{{name}}</a></p>
                    {{/../primary_tag}}
                            <div class="row row-30 row-xl-50">
                                {{#foreach related_posts}}
                                    <div class="col-md-4 col-xl-4">
                                        {{> _post-box}}
                                    </div>
                                {{/foreach}}
                            </div>
                        {{/if}}
                {{/get}}
    {{/if}}
{{/post}}
